---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { blogPosts } from '../../data/blog';

// Sort posts by date (newest first) - assuming date string is parseable
const sortedPosts = [...blogPosts].sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

// Get unique categories
const categories = [...new Set(blogPosts.map(post => post.category))];

const schema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "AgroPro Insights & News",
  "description": "Expert advice on animal nutrition, farm management, and industry news.",
  "url": "https://agropro-feed.com/blog",
  "blogPost": sortedPosts.map(post => ({
    "@type": "BlogPosting",
    "headline": post.title,
    "description": post.excerpt,
    "image": `https://agropro-feed.com${post.image}`,
    "datePublished": new Date(post.date).toISOString(),
    "author": {
      "@type": "Person",
      "name": post.author
    },
    "url": `https://agropro-feed.com/blog/${post.slug}`
  }))
};
---

<Layout
  title="Insights & Blog - AgroPro Animal Nutrition"
  description="Read the latest insights, tips, and news on animal nutrition, livestock management, and feed efficiency from the experts at AgroPro."
  canonical="https://agropro-feed.com/blog"
  schema={schema}
>
  <Header />
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="titlepage text_align_center">
            <h2>Insights & News</h2>
            <p>Expert advice on animal nutrition and farm management</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="section-padding">
    <div class="container">

      <!-- Category Filter -->
      <div class="row mb-5">
        <div class="col-12 text-center">
          <div class="category-filter">
            <a href="/blog" class="active">All</a>
            {categories.map(cat => (
              <a href={`/blog/category/${cat.toLowerCase()}`}>{cat}</a>
            ))}
          </div>
        </div>
      </div>

      <div class="row">
        {sortedPosts.map(post => (
          <div class="col-md-4 col-sm-6">
            <div class="blog-card">
              <div class="blog-img">
                <img src={post.image} alt={post.title} />
                <a href={`/blog/category/${post.category.toLowerCase()}`} class="category-tag">{post.category}</a>
              </div>
              <div class="blog-content">
                <div class="meta">
                  <span><i class="fa fa-calendar"></i> {post.date}</span>
                  <span><i class="fa fa-user"></i> {post.author}</span>
                </div>
                <h3><a href={`/blog/${post.slug}`}>{post.title}</a></h3>
                <p>{post.excerpt}</p>
                <a href={`/blog/${post.slug}`} class="read-more">Read More <i class="fa fa-arrow-right"></i></a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  <Footer />
</Layout>

<style>
  .page-header {
    background: #f4f4f4;
    padding: 60px 0;
    margin-bottom: 40px;
  }
  .section-padding {
    padding: 40px 0 80px;
  }
  .category-filter {
    margin-bottom: 30px;
  }
  .category-filter a {
    display: inline-block;
    padding: 8px 20px;
    margin: 0 5px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 20px;
    color: #333;
    text-decoration: none;
    transition: all 0.3s;
  }
  .category-filter a:hover, .category-filter a.active {
    background: #e9c46a;
    border-color: #e9c46a;
    color: #264653;
  }
  .blog-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    margin-bottom: 30px;
    transition: transform 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .blog-card:hover {
    transform: translateY(-5px);
  }
  .blog-img {
    position: relative;
    height: 200px;
    overflow: hidden;
    background: #eee;
  }
  .blog-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .category-tag {
    position: absolute;
    top: 15px;
    right: 15px;
    background: #e9c46a;
    color: #264653;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }
  .blog-content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  .meta {
    display: flex;
    gap: 15px;
    font-size: 0.8rem;
    color: #888;
    margin-bottom: 10px;
  }
  .meta i {
    color: #e9c46a;
    margin-right: 5px;
  }
  .blog-content h3 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    line-height: 1.4;
  }
  .blog-content h3 a {
    color: #264653;
    text-decoration: none;
    transition: color 0.2s;
  }
  .blog-content h3 a:hover {
    color: #e9c46a;
  }
  .blog-content p {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 20px;
    flex-grow: 1;
  }
  .read-more {
    color: #2a9d8f;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 5px;
    transition: gap 0.2s;
  }
  .read-more:hover {
    gap: 8px;
  }
</style>
