---
import { Icon } from 'astro-icon/components';
import { categories } from '../data/products';

interface Props {
  product: {
    id: string;
    name: string;
    slug: string;
    price: number;
    image: string;
    topCategory: string;
    tags: string[];
    description: string;
    animal: string;
    weight: string;
    minQuantity?: string;
  };
}

const { product } = Astro.props;

// Get category icon based on topCategory
const categoryData = categories.find(cat => cat.slug === product.topCategory);
const categoryIcon = categoryData?.icon || 'mdi:package-variant';
const categoryName = categoryData?.title || 'Unknown Category';
---

<div class="product-card" data-animal={product.animal} data-price={product.price} data-weight={product.weight}>
  <div class="product-image">
    {product.image ? (
      <img src={product.image} alt={product.name} loading="lazy" />
    ) : (
      <div class="no-image-placeholder">
        <Icon name={categoryIcon} class="placeholder-icon" />
      </div>
    )}
    <div class="overlay">
      <a href={`/${product.topCategory}/${product.slug}`} class="view-btn">
        View Details
      </a>
    </div>
  </div>
  <div class="product-info">
    <div class="product-meta">
      <a href={`/${product.topCategory}`} class="category-tag">
        <Icon name={categoryIcon} class="icon-sm" /> {categoryName}
      </a>
      <span class="quantity-tag">Min: {product.minQuantity || product.weight}</span>
    </div>
    <h3 class="product-title">
      <a href={`/${product.topCategory}/${product.slug}`}>{product.name}</a>
    </h3>
    <div class="product-composition">
      <span>{product.protein} Protein</span>
      <span class="separator">â€¢</span>
      <span>{product.lifeStage}</span>
    </div>
    <p class="product-desc">{product.description}</p>
    <div class="product-bottom">
      <span class="price">${product.price.toFixed(2)} <span class="unit">/ {product.weight}</span></span>
      <button class="send-enquiry-btn" aria-label="Send Enquiry" onclick={`openEnquiryModal('${product.name.replace(/'/g, "\\'")}')`}>
        Send Enquiry
      </button>
    </div>
  </div>
</div>

<style>
  .product-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    border: 1px solid #eee;
    margin-bottom: 24px;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
  }

  .product-image {
    position: relative;
    padding-top: 75%; /* 4:3 Aspect Ratio */
    overflow: hidden;
    background: #f8f9fa;
  }

  .product-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .no-image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e9ecef;
  }

  .placeholder-icon {
    font-size: 4rem;
    color: #adb5bd;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(38, 70, 83, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .product-card:hover .overlay {
    opacity: 1;
  }

  .view-btn {
    background: transparent;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
    transform: translateY(20px);
    transition: all 0.3s ease;
  }

  .product-card:hover .view-btn {
    transform: translateY(0);
  }

  .view-btn:hover {
    background: #fff;
    color: #264653;
  }

  .product-info {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .product-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: #666;
    margin-bottom: 10px;
    flex-wrap: wrap;
    gap: 8px;
  }

  .category-tag {
    display: flex;
    align-items: center;
    gap: 4px;
    text-transform: uppercase;
    font-weight: 600;
    color: #2a9d8f;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .category-tag:hover {
    color: #e9c46a;
  }

  .quantity-tag {
    display: flex;
    align-items: center;
    font-weight: 500;
    color: #666;
    background: #f0f0f0;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .icon-sm {
    width: 14px;
    height: 14px;
  }

  .product-title {
    font-size: 1.1rem;
    margin: 0 0 10px;
    line-height: 1.4;
  }

  .product-title a {
    color: #264653;
    text-decoration: none;
    transition: color 0.2s;
  }

  .product-title a:hover {
    color: #e9c46a;
  }

  .product-composition {
    font-size: 0.85rem;
    color: #2a9d8f;
    font-weight: 600;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .product-composition .separator {
    color: #ccc;
  }

  .product-desc {
    font-size: 0.9rem;
    color: #777;
    margin-bottom: 15px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 15px;
    border-top: 1px solid #eee;
    flex-wrap: wrap;
    gap: 10px;
  }

  .price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #264653;
  }

  .unit {
    font-size: 0.8rem;
    font-weight: 400;
    color: #666;
  }

  .send-enquiry-btn {
    background: transparent;
    color: #2a9d8f;
    border: 1px solid #2a9d8f;
    padding: 8px 16px;
    border-radius: 5px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .send-enquiry-btn:hover {
    background: #2a9d8f;
    color: #fff;
  }

  /* Mobile Responsive Styles */
  @media (max-width: 767.98px) {
    .product-card {
      margin-bottom: 20px;
    }

    .product-info {
      padding: 15px;
    }

    .product-title {
      font-size: 1rem;
    }

    .product-desc {
      font-size: 0.85rem;
      margin-bottom: 12px;
    }

    .price {
      font-size: 1.1rem;
    }

    .send-enquiry-btn {
      padding: 6px 12px;
      font-size: 0.8rem;
    }

    .view-btn {
      padding: 8px 16px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 575.98px) {
    .product-card {
      margin-bottom: 16px;
    }

    .product-info {
      padding: 12px;
    }

    .product-meta {
      font-size: 0.75rem;
    }

    .product-title {
      font-size: 0.95rem;
      margin-bottom: 8px;
    }

    .product-bottom {
      padding-top: 12px;
    }

    .price {
      font-size: 1rem;
    }

    .send-enquiry-btn {
      width: 100%;
      text-align: center;
      padding: 10px 12px;
    }
  }
</style>
