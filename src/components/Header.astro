---
import { Icon } from 'astro-icon/components';
import { categories } from '../data/products';
---

<header class="header-area">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-6 col-md-3">
        <div class="logo">
          <a href="/">Agro<span>Pro</span></a>
        </div>
      </div>
      <div class="col-6 col-md-9">
        <div class="navbar-area">
          <!-- Desktop Navigation -->
          <nav class="site-navbar d-none d-lg-block">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/about">About</a></li>
              <li class="dropdown">
                <a href="/products">Feeds <Icon name="mdi:chevron-down" class="dropdown-icon" /></a>
                <ul class="dropdown-menu">
                  {categories.map((category) => (
                    <li>
                      <a href={`/${category.slug}`}>
                        <Icon name={category.icon} class="menu-icon" />
                        {category.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
              <li><a href="/bulk-orders">Bulk Orders</a></li>
              <li class="dropdown">
                <a href="#">Resources <Icon name="mdi:chevron-down" class="dropdown-icon" /></a>
                <ul class="dropdown-menu">
                  <li><a href="/feeding-guide">Feeding Guide</a></li>
                  <li><a href="/quality-safety">Quality & Safety</a></li>
                  <li><a href="/feed-faq">Feed FAQ</a></li>
                </ul>
              </li>
              <li>
                <button id="search-toggle" aria-label="Search">
                  <Icon name="mdi:magnify" size={24} />
                </button>
              </li>
              <li><a href="/contact" class="btn-custom" style="color: #264653; padding: 8px 20px; margin-left: 10px;">Contact Us</a></li>
            </ul>
          </nav>

          <!-- Mobile Controls -->
          <div class="mobile-controls d-lg-none">
            <button id="mobile-search-toggle" aria-label="Search">
              <Icon name="mdi:magnify" size={24} />
            </button>
            <button class="nav-toggler" id="nav-toggler" aria-label="Toggle navigation">
              <span></span>
              <span></span>
              <span></span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation Drawer -->
  <div class="mobile-nav-overlay" id="mobile-nav-overlay"></div>
  <div class="mobile-nav-drawer" id="mobile-nav-drawer">
    <div class="drawer-header">
      <div class="logo">
        <a href="/">Agro<span>Pro</span></a>
      </div>
      <button class="close-drawer" id="close-drawer" aria-label="Close navigation">
        <Icon name="mdi:close" size={24} />
      </button>
    </div>
    <div class="drawer-content">
      <ul class="mobile-menu">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li class="has-submenu">
          <button class="submenu-toggle">Feeds <Icon name="mdi:chevron-down" /></button>
          <ul class="submenu">
            <li><a href="/products">All Products</a></li>
            {categories.map((category) => (
              <li>
                <a href={`/${category.slug}`}>
                  <Icon name={category.icon} class="menu-icon" />
                  {category.title}
                </a>
              </li>
            ))}
          </ul>
        </li>
        <li><a href="/bulk-orders">Bulk Orders</a></li>
        <li class="has-submenu">
          <button class="submenu-toggle">Resources <Icon name="mdi:chevron-down" /></button>
          <ul class="submenu">
            <li><a href="/feeding-guide">Feeding Guide</a></li>
            <li><a href="/quality-safety">Quality & Safety</a></li>
            <li><a href="/feed-faq">Feed FAQ</a></li>
          </ul>
        </li>
        <li><a href="/contact">Contact Us</a></li>
      </ul>
    </div>
  </div>

  <!-- Search Overlay -->
  <div id="search-overlay" class="search-overlay">
    <div class="search-container">
      <button id="close-search" class="close-search">
        <Icon name="mdi:close" size={32} />
      </button>
      <form action="/products" method="get" class="search-form">
        <input type="text" name="search" placeholder="Search for feeds, supplements..." autofocus />
        <button type="submit" class="search-submit">
          <Icon name="mdi:magnify" size={24} />
        </button>
      </form>
    </div>
  </div>
</header>

<style>
  /* Header Layout */
  .header-area {
    background: #fff;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 15px 0;
  }

  .logo a {
    font-size: 28px;
    font-weight: 800;
    color: #264653;
    text-decoration: none;
  }
  .logo span {
    color: #e9c46a;
  }

  .navbar-area {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  /* Desktop Navigation */
  .site-navbar > ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    align-items: center;
  }
  .site-navbar > ul > li {
    margin-left: 25px;
    position: relative;
  }
  .site-navbar > ul > li > a {
    color: #264653;
    font-weight: 600;
    text-decoration: none;
    font-size: 16px;
    transition: color 0.3s;
    display: flex;
    align-items: center;
  }
  .site-navbar > ul > li > a:hover {
    color: #e9c46a;
  }

  /* Mobile Controls */
  .mobile-controls {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  #mobile-search-toggle {
    background: none;
    border: none;
    color: #264653;
    padding: 5px;
  }
  .nav-toggler {
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
  .nav-toggler span {
    display: block;
    width: 25px;
    height: 3px;
    background: #264653;
    border-radius: 3px;
    transition: all 0.3s;
  }

  /* Mobile Drawer */
  .mobile-nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 1001;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
  }
  .mobile-nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav-drawer {
    position: fixed;
    top: 0;
    right: -300px;
    width: 300px;
    height: 100%;
    background: #fff;
    z-index: 1002;
    transition: right 0.3s cubic-bezier(0.77, 0, 0.175, 1);
    box-shadow: -5px 0 15px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
  }
  .mobile-nav-drawer.active {
    right: 0;
  }

  .drawer-header {
    padding: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #eee;
  }
  .close-drawer {
    background: none;
    border: none;
    color: #264653;
    cursor: pointer;
  }

  .drawer-content {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
  }
  .mobile-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .mobile-menu li {
    border-bottom: 1px solid #f5f5f5;
  }
  .mobile-menu li a, .submenu-toggle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 15px 0;
    color: #264653;
    font-weight: 600;
    text-decoration: none;
    background: none;
    border: none;
    font-size: 16px;
    cursor: pointer;
  }
  .submenu-toggle svg {
    transition: transform 0.3s ease;
  }
  .submenu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
    background: #f8f9fa;
    padding-left: 20px;
    border-radius: 5px;
    margin-bottom: 10px;
  }
  .submenu.active {
    display: block;
  }
  .submenu li {
    border-bottom: 1px solid #eee;
  }
  .submenu li:last-child {
    border-bottom: none;
  }
  .submenu li a {
    font-size: 14px;
    padding: 12px 0;
    font-weight: 500;
    display: flex;
    align-items: center;
  }

  /* Dropdown Styles (Desktop) */
  .dropdown {
    position: relative;
    padding-bottom: 10px; /* Bridge the gap */
    margin-bottom: -10px; /* Compensate for padding */
  }

  .dropdown-icon {
    display: inline-block;
    vertical-align: middle;
    margin-left: 4px;
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    background: #fff;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    border: 1px solid rgba(0,0,0,0.05);
    border-radius: 12px;
    min-width: 260px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    padding: 8px;
    z-index: 1000;
    list-style: none;
    display: block; /* Override global flex */
  }

  /* Arrow for the dropdown */
  .dropdown-menu::before {
    content: '';
    position: absolute;
    top: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: #fff;
    border-left: 1px solid rgba(0,0,0,0.05);
    border-top: 1px solid rgba(0,0,0,0.05);
    z-index: -1;
  }

  .dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .dropdown-menu li {
    display: block;
    margin: 0 !important; /* Override global margin */
    width: 100%;
  }

  .dropdown-menu a {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #264653;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s ease;
    text-decoration: none;
    border-radius: 8px;
  }

  .dropdown-menu a:hover {
    background-color: #f1faee;
    color: #264653;
    transform: translateX(5px);
  }

  .menu-icon {
    margin-right: 12px;
    width: 22px;
    height: 22px;
    color: #e9c46a; /* Gold accent for icons */
    transition: color 0.2s;
  }

  .dropdown-menu a:hover .menu-icon {
    color: #264653;
  }

  /* Search Styles */
  #search-toggle {
    background: none;
    border: none;
    cursor: pointer;
    color: #264653;
    padding: 5px;
    transition: color 0.3s;
  }

  #search-toggle:hover {
    color: #e9c46a;
  }

  .search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(38, 70, 83, 0.95); /* Dark Green overlay */
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .search-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .search-container {
    position: relative;
    width: 100%;
    max-width: 800px;
    padding: 20px;
  }

  .close-search {
    position: absolute;
    top: -60px;
    right: 0;
    background: none;
    border: none;
    color: #fff;
    cursor: pointer;
  }

  .search-form {
    position: relative;
    border-bottom: 2px solid rgba(255,255,255,0.5);
  }

  .search-form input {
    width: 100%;
    background: none;
    border: none;
    color: #fff;
    font-size: 2rem;
    padding: 15px 50px 15px 0;
    outline: none;
  }

  .search-form input::placeholder {
    color: rgba(255,255,255,0.5);
  }

  .search-submit {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #e9c46a;
    cursor: pointer;
  }
</style>

<script>
  // Search Toggle Logic
  const searchToggle = document.getElementById('search-toggle');
  const mobileSearchToggle = document.getElementById('mobile-search-toggle');
  const searchOverlay = document.getElementById('search-overlay');
  const closeSearch = document.getElementById('close-search');
  const searchInput = document.querySelector('.search-form input') as HTMLInputElement;

  function openSearch() {
    if (searchOverlay) {
      searchOverlay.classList.add('active');
      setTimeout(() => searchInput?.focus(), 100);
    }
  }

  if (searchToggle) searchToggle.addEventListener('click', openSearch);
  if (mobileSearchToggle) mobileSearchToggle.addEventListener('click', openSearch);

  if (closeSearch && searchOverlay) {
    closeSearch.addEventListener('click', () => {
      searchOverlay.classList.remove('active');
    });
  }

  // Mobile Drawer Logic
  const navToggler = document.getElementById('nav-toggler');
  const mobileNavDrawer = document.getElementById('mobile-nav-drawer');
  const mobileNavOverlay = document.getElementById('mobile-nav-overlay');
  const closeDrawer = document.getElementById('close-drawer');

  function toggleDrawer() {
    mobileNavDrawer?.classList.toggle('active');
    mobileNavOverlay?.classList.toggle('active');
    document.body.style.overflow = mobileNavDrawer?.classList.contains('active') ? 'hidden' : '';
  }

  if (navToggler) navToggler.addEventListener('click', toggleDrawer);
  if (closeDrawer) closeDrawer.addEventListener('click', toggleDrawer);
  if (mobileNavOverlay) mobileNavOverlay.addEventListener('click', toggleDrawer);

  // Mobile Submenu Logic
  const submenuToggles = document.querySelectorAll('.submenu-toggle');
  submenuToggles.forEach(toggle => {
    toggle.addEventListener('click', (e) => {
      const submenu = (e.currentTarget as HTMLElement).nextElementSibling;
      submenu?.classList.toggle('active');
      const icon = (e.currentTarget as HTMLElement).querySelector('svg');
      if (icon) {
        icon.style.transform = submenu?.classList.contains('active') ? 'rotate(180deg)' : 'rotate(0)';
      }
    });
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      if (searchOverlay?.classList.contains('active')) {
        searchOverlay.classList.remove('active');
      }
      if (mobileNavDrawer?.classList.contains('active')) {
        toggleDrawer();
      }
    }
  });
</script>
