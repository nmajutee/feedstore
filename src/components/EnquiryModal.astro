<div id="enquiryModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Send Enquiry</h2>
    <form id="enquiryForm" class="main_form">
      <div class="row">
        <div class="col-md-12">
          <input class="contactus" placeholder="Name" type="text" name="Name" required>
        </div>
        <div class="col-md-12">
          <input class="contactus" placeholder="Email" type="email" name="Email" required>
        </div>
        <div class="col-md-12">
          <input class="contactus" placeholder="Subject" type="text" name="Subject" required>
        </div>
        <div class="col-md-12">
          <input class="contactus" type="text" id="modalProduct" name="Product" readonly style="background-color: #e9ecef;">
        </div>
        <div class="col-md-12">
          <textarea class="textarea" placeholder="Message" name="Message" required></textarea>
        </div>
        <div class="col-md-12">
          <div class="checkbox-wrapper" style="margin-bottom: 20px; display: flex; align-items: center; gap: 10px;">
             <input type="checkbox" id="terms-modal" name="terms" required>
             <label for="terms-modal" style="margin: 0; color: #666; font-size: 0.9rem;">I agree to the <a href="/terms-conditions" target="_blank" style="color: #2a9d8f; text-decoration: underline;">Terms & Conditions</a> and <a href="/privacy-policy" target="_blank" style="color: #2a9d8f; text-decoration: underline;">Privacy Policy</a>.</label>
          </div>
        </div>
        <div class="col-md-12">
          <button class="send_btn">Send</button>
        </div>
      </div>
    </form>
  </div>
</div>

<style>
  .modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 10% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 600px;
    border-radius: 8px;
    position: relative;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    position: absolute;
    right: 20px;
    top: 10px;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }

  /* Reuse existing form styles or add specific ones */
  .contactus {
     padding: 0px 15px;
     margin-bottom: 20px;
     width: 100%;
     height: 50px;
     background: #fff;
     color: #000;
     font-size: 16px;
     font-weight: normal;
     border: 1px solid #ddd;
     border-radius: 5px;
  }

  .textarea {
     padding: 15px;
     margin-bottom: 20px;
     width: 100%;
     background: #fff;
     color: #000;
     font-size: 16px;
     font-weight: normal;
     border: 1px solid #ddd;
     border-radius: 5px;
     height: 120px;
  }

  .send_btn {
     font-size: 18px;
     transition: all 0.3s ease;
     background-color: transparent;
     text-transform: uppercase;
     color: #2a9d8f;
     padding: 10px 0px;
     max-width: 180px;
     width: 100%;
     display: block;
     margin-top: 10px;
     font-weight: 600;
     text-align: center;
     border-radius: 5px;
     border: 1px solid #2a9d8f;
     letter-spacing: 1px;
  }

  .send_btn:hover {
     background-color: #2a9d8f;
     color: #fff;
  }
</style>

<script>
  // Get the modal
  const modal = document.getElementById("enquiryModal");
  const span = document.getElementsByClassName("close")[0];
  const productInput = document.getElementById("modalProduct") as HTMLInputElement;

  // Function to open modal
  window.openEnquiryModal = (productName) => {
    if(modal && productInput) {
        modal.style.display = "block";
        productInput.value = productName;
    }
  }

  // When the user clicks on <span> (x), close the modal
  if(span) {
      (span as HTMLElement).onclick = function() {
        if(modal) modal.style.display = "none";
      }
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      if(modal) modal.style.display = "none";
    }
  }
</script>
